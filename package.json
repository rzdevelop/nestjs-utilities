{
  "name": "nestjs-utilities",
  "version": "0.1.22",
  "description": "NestJS Package including abstractions for typeorm, authentication, pagination, configuration and more",
  "author": "Renan Zelaya <renan_zelaya@hotmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzdevelop/nestjs-utilities.git"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' -c .eslintrc.js",
    "test": "jest --config jestconfig.json",
    "test:coverage": "jest --config jestconfig.json  --coverage --coverageReporter=\"json-summary\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "deploy": "npm version patch && npm publish"
  },
  "keywords": [
    "nestjs",
    "typeorm",
    "cqrs"
  ],
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "^8.0.1",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/terminus": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "class-validator": "^0.13.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "jest": "^27.2.5",
    "nestjs-pino": "^2.5.0",
    "pino-http": "^6.6.0",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-jest": "^27.0.3",
    "typeorm": "^0.2.41",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  },
  "files": [
    "lib/**/*"
  ],
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "^8.0.1",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/terminus": "^8.0.4",
    "class-validator": "^0.13.2",
    "nestjs-pino": "^2.5.0",
    "pino-http": "^6.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.41"
  }
}
